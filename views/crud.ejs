  <body>
    <% include ../fixed/nav %>
    <% var data; %>
    <div class="crud-pageContainer">
      <p class="crud-pageTitle">Update Spellings for Countries</p>
      <form class="mb-3" method="GET" action="/getCountryInfo" style="width: 100%; display: flex; flex-direction: column; justify-content: flex-start; gap: 12px;">
        <div class="crud-countrySearchBar">
          <div class="crud-countrySearchBarLabel">
            <p>Enter Country Name: </p>
          </div>
          <input style="box-sizing: border-box; padding: 16px; flex: 1; border-top: 2px solid black; border-bottom: 2px solid black; border-right: none; border-left: none" id="countryName" style="outline: none;" name="countryName" type="text" required>
          <input class="form-control" name="option" value="spelling" type="hidden">
          <div class="input-group-append">
            <input class="btn btn-info" style="box-sizing: border-box; padding: 16px; width: 100px; border-top: 2px solid #17a2b8; border-bottom: 2px solid #17a2b8; border-left: none; border-right: 2px solid #17a2b8; border-radius: 0px 8px 8px 0px" id ="getData" type="submit" value="Search">
          </div>
        </div>
        <div class="crud-countrySearchBarHelp">
          <i style="color: #17A2B8; font-size: 20px;" class="fa-solid fa-circle-info"></i>
          <p>This page is to update spellings for countries. Click each spelling to edit and remove. use the add column to add a new spelling. All the data including country name is <span style="color: blue;">case-sensitive</span>, make sure you are proper spellings.</p>
        </div>
      </form>

      <% if ( data != undefined && data[0] == undefined) { %>
        <div class="row justify-content-center" style="color: red"> Incorrect Country Name entered, please try again. </div>
      <% } else if (data != undefined && data[0] != undefined){ %>
        <% data = data[0] %>
          <table class=""  id="databaseTable" value= <%= data._id %> >
            <thead>
              <tr style="border-top: 2px solid black; border-bottom: 2px solid black">
                <th scope="col" style="box-sizing: border-box; padding: 16px 24px"></th>
                <th scope="col" style="box-sizing: border-box; padding: 16px 24px; width: 100%">Content</th>
                <th scope="col" style="box-sizing: border-box; padding: 16px 24px">Actions</th>
              </tr>
            </thead>
            <tbody>
              <tr value = "properties.continent" style="border-bottom: 2px solid black">
                <th scope="row" style="box-sizing: border-box; padding: 16px 24px">Continent</th>
                <td style="box-sizing: border-box; padding: 16px 24px;">
                  <div id="continent" class="row_data" edit_type="click" style="box-sizing: border-box; padding: 0; display: flex; flex-direction: row; width: 100%;"><%= data.properties.continent %></div>
                </td>
                <td style="box-sizing: border-box; padding: 16px 24px;">
                  <div style="display: flex; flex-direction: row; align-items: center; gap: 16px">
                    <span class="btn-save" style="visibility: hidden"><button style="display: flex; flex-direction: row; justify-content: center; align-items: center; background-color: transparent; border: none; font-size: 20px; padding: 0; box-sizing: border-box; margin: 0"><i class="fa-regular fa-pen-to-square"></i></button></span>
                    <span class="btn-cancel" style="visibility: hidden"><button style="display: flex; flex-direction: row; justify-content: center; align-items: center; background-color: transparent; border: none; font-size: 20px; padding: 0; box-sizing: border-box; margin: 0"><i class="fa-solid fa-xmark"></i></button></span>
                  </div>
                </td>
              </tr>
              <tr value ="properties.capital" style="border-bottom: 2px solid black">
                <th scope="row" style="box-sizing: border-box; padding: 16px 24px">Capital</th>
                <td style="box-sizing: border-box; padding: 16px 24px;">
                  <div id ="capital" class="row_data" edit_type="click" value ="0" style="box-sizing: border-box; padding: 0; display: flex; flex-direction: row; width: 100%;">
                    <%= data.properties.capital[0] %>
                  </div>
                </td>
                <td style="box-sizing: border-box; padding: 16px 24px;">
                  <div style="display: flex; flex-direction: row; align-items: center; gap: 16px">
                    <span class="btn-save" style="visibility: hidden"><button style="display: flex; flex-direction: row; justify-content: center; align-items: center; background-color: transparent; border: none; font-size: 20px; padding: 0; box-sizing: border-box; margin: 0"><i class="fa-regular fa-pen-to-square"></i></button></span>
                    <span class="btn-cancel" style="visibility: hidden"><button style="display: flex; flex-direction: row; justify-content: center; align-items: center; background-color: transparent; border: none; font-size: 20px; padding: 0; box-sizing: border-box; margin: 0"><i class="fa-solid fa-xmark"></i></button></span>
                  </div>
                </td>
              </tr>
              <tr value ="properties.name" style="border-bottom: 2px solid black">
                <th scope="row" style="box-sizing: border-box; padding: 16px 24px">Country</th>
                <td style="box-sizing: border-box; padding: 16px 24px;">
                  <div id="name" class="row_data" edit_type="click" style="display: flex; flex-direction: row; align-items: center; gap: 16px">
                    <%= data.properties.name[0] %>
                  </div>
                </td>
                <td style="box-sizing: border-box; padding: 16px 24px;">
                  <div style="display: flex; flex-direction: row; align-items: center; gap: 16px">
                    <span class="btn-save" style="visibility: hidden"><button style="display: flex; flex-direction: row; justify-content: center; align-items: center; background-color: transparent; border: none; font-size: 20px; padding: 0; box-sizing: border-box; margin: 0"><i class="fa-regular fa-pen-to-square"></i></button></span>
                    <span class="btn-cancel" style="visibility: hidden"><button style="display: flex; flex-direction: row; justify-content: center; align-items: center; background-color: transparent; border: none; font-size: 20px; padding: 0; box-sizing: border-box; margin: 0"><i class="fa-solid fa-xmark"></i></button></span>
                  </div>
                </td>
              </tr>
  
              <tr id="altCapital" value ="altCapital" style="border-bottom: 2px solid black">
                <th scope="row" style="box-sizing: border-box; padding: 16px 24px">Alternative Answers for Capital</th>
                <td style="box-sizing: border-box; padding: 16px 24px; display: flex; flex-direction: column; justify-content: flex-start; gap: 8px">
                  <input type=text class="input" placeholder="Enter a new alternative answer for capital here..." style="border: none; padding: 0; outline: none;">
                  <div>
                    <% var capLen = data.properties.capital.length  %>
                    <% if ( capLen > 1){ %>
                      <% for (var i =1; i < capLen; i++ ){ %>
                        <div class="row_data" edit_type="click">
                          <%= data.properties.capital[i]%>
                        </div>
                      <%  } %>
                    <% } %>
                  </div>
                </td>
                <td style="box-sizing: border-box; padding: 16px 24px;">
                  <div style="display: flex; flex-direction: row; align-items: flex-start; gap: 16px">
                    <span class="btn-save" style="visibility: hidden"><button style="display: flex; flex-direction: row; justify-content: center; align-items: center; background-color: transparent; border: none; font-size: 20px; padding: 0; box-sizing: border-box; margin: 0"><i class="fa-regular fa-pen-to-square"></i></button></span>
                    <span class="btn-delete" style="visibility: hidden"><button style="display: flex; flex-direction: row; justify-content: center; align-items: center; background-color: transparent; border: none; font-size: 20px; padding: 0; box-sizing: border-box; margin: 0"><i class="fa-regular fa-trash-can"></i></button></span>
                    <span class="btn-cancel" style="visibility: hidden"><button style="display: flex; flex-direction: row; justify-content: center; align-items: center; background-color: transparent; border: none; font-size: 20px; padding: 0; box-sizing: border-box; margin: 0"><i class="fa-solid fa-xmark"></i></button></span>
                    <span class="btn-add" style="visibility: hidden"><button style="display: flex; flex-direction: row; justify-content: center; align-items: center; background-color: transparent; border: none; font-size: 20px; padding: 0; box-sizing: border-box; margin: 0"><i class="fa-solid fa-plus"></i></button></span>
                  </div>
                </td>
              </tr>
              <tr value ="properties.misspell_capital" style="border-bottom: 2px solid black">
                <th scope="row" style="box-sizing: border-box; padding: 16px 24px">Misspellings for Capital (3)</th>
                <td style="box-sizing: border-box; padding: 16px 24px; display: flex; flex-direction: column; justify-content: flex-start; gap: 8px">
                  <input type=text class="input" placeholder="Enter a new misspellings answer for capital here..." style="border: none; padding: 0; outline: none;">
                  <div>
                    <% var mCapLen = data.properties.misspell_capital.length  %>
                    <% if (mCapLen !=0) { %>
                      <% for (var i =0; i < mCapLen; i++ ){ %>
                        <div class="row_data" edit_type="click">
                          <%= data.properties.misspell_capital[i]%>
                        </div>
                      <% } %>
                    <% } %>
                  </div>
                </td>
                <td style="box-sizing: border-box; padding: 16px 24px;">
                  <div style="display: flex; flex-direction: row; align-items: flex-start; gap: 16px">
                    <span class="btn-save" style="visibility: hidden"><button style="display: flex; flex-direction: row; justify-content: center; align-items: center; background-color: transparent; border: none; font-size: 20px; padding: 0; box-sizing: border-box; margin: 0"><i class="fa-regular fa-pen-to-square"></i></button></span>
                    <span class="btn-delete" style="visibility: hidden"><button style="display: flex; flex-direction: row; justify-content: center; align-items: center; background-color: transparent; border: none; font-size: 20px; padding: 0; box-sizing: border-box; margin: 0"><i class="fa-regular fa-trash-can"></i></button></span>
                    <span class="btn-cancel" style="visibility: hidden"><button style="display: flex; flex-direction: row; justify-content: center; align-items: center; background-color: transparent; border: none; font-size: 20px; padding: 0; box-sizing: border-box; margin: 0"><i class="fa-solid fa-xmark"></i></button></span>
                    <span class="btn-add" style="visibility: hidden"><button style="display: flex; flex-direction: row; justify-content: center; align-items: center; background-color: transparent; border: none; font-size: 20px; padding: 0; box-sizing: border-box; margin: 0"><i class="fa-solid fa-plus"></i></button></span>
                  </div>
                </td>
              </tr>
              <tr id="altName" value ="altName" style="border-bottom: 2px solid black">
                <th scope="row" style="box-sizing: border-box; padding: 16px 24px">Alternative Answers for Country</th>
                <td style="box-sizing: border-box; padding: 16px 24px; display: flex; flex-direction: column; justify-content: flex-start; gap: 8px">
                  <input type=text class="input" placeholder="Enter a new alternative answer for country here..." style="border: none; padding: 0; outline: none;">
                  <div>
                    <% var nameLen = data.properties.name.length  %>
                    <% if ( nameLen > 1){ %>
                      <% for (var i =1; i < nameLen; i++ ){ %>
                        <div class="row_data" edit_type="click">
                          <%= data.properties.name[i]%>
                        </div>
                      <%  } %>
                    <% } %>
                  </div>
                </td>
                <td style="box-sizing: border-box; padding: 16px 24px;">
                  <div style="display: flex; flex-direction: row; align-items: flex-start; gap: 16px">
                    <span class="btn-save" style="visibility: hidden"><button style="display: flex; flex-direction: row; justify-content: center; align-items: center; background-color: transparent; border: none; font-size: 20px; padding: 0; box-sizing: border-box; margin: 0"><i class="fa-regular fa-pen-to-square"></i></button></span>
                    <span class="btn-delete" style="visibility: hidden"><button style="display: flex; flex-direction: row; justify-content: center; align-items: center; background-color: transparent; border: none; font-size: 20px; padding: 0; box-sizing: border-box; margin: 0"><i class="fa-regular fa-trash-can"></i></button></span>
                    <span class="btn-cancel" style="visibility: hidden"><button style="display: flex; flex-direction: row; justify-content: center; align-items: center; background-color: transparent; border: none; font-size: 20px; padding: 0; box-sizing: border-box; margin: 0"><i class="fa-solid fa-xmark"></i></button></span>
                    <span class="btn-add" style="visibility: hidden"><button style="display: flex; flex-direction: row; justify-content: center; align-items: center; background-color: transparent; border: none; font-size: 20px; padding: 0; box-sizing: border-box; margin: 0"><i class="fa-solid fa-plus"></i></button></span>
                  </div>
                </td>
              </tr>
              <tr value ="properties.misspell_name" style="border-bottom: 2px solid black">
                <th scope="row" style="box-sizing: border-box; padding: 16px 24px">Misspellings for Country (3)</th>
                <td style="box-sizing: border-box; padding: 16px 24px; display: flex; flex-direction: column; justify-content: flex-start; gap: 8px">
                  <input type=text class="input" placeholder="Enter a new misspellings answer for country here..." style="border: none; padding: 0; outline: none;">
                  <div>
                    <% var mNameLen = data.properties.misspell_name.length  %>
                    <% if (mNameLen !=0) { %>
                      <% for (var i =0; i < mNameLen; i++ ){ %>
                          <div class="row_data" edit_type="click">
                            <%= data.properties.misspell_name[i]%>
                          </div>
                      <%  } %>
                    <% } %>
                  </div>
                </td>
                <td style="box-sizing: border-box; padding: 16px 24px;">
                  <div style="display: flex; flex-direction: row; align-items: flex-start; gap: 16px">
                    <span class="btn-save" style="visibility: hidden"><button style="display: flex; flex-direction: row; justify-content: center; align-items: center; background-color: transparent; border: none; font-size: 20px; padding: 0; box-sizing: border-box; margin: 0"><i class="fa-regular fa-pen-to-square"></i></button></span>
                    <span class="btn-delete" style="visibility: hidden"><button style="display: flex; flex-direction: row; justify-content: center; align-items: center; background-color: transparent; border: none; font-size: 20px; padding: 0; box-sizing: border-box; margin: 0"><i class="fa-regular fa-trash-can"></i></button></span>
                    <span class="btn-cancel" style="visibility: hidden"><button style="display: flex; flex-direction: row; justify-content: center; align-items: center; background-color: transparent; border: none; font-size: 20px; padding: 0; box-sizing: border-box; margin: 0"><i class="fa-solid fa-xmark"></i></button></span>
                    <span class="btn-add" style="visibility: hidden"><button style="display: flex; flex-direction: row; justify-content: center; align-items: center; background-color: transparent; border: none; font-size: 20px; padding: 0; box-sizing: border-box; margin: 0"><i class="fa-solid fa-plus"></i></button></span>
                  </div>
                </td>
              </tr>
            </tbody>
          </table>
        </div>
      <%} %>
    </div>

    <script type="text/javascript">
      var id = $("#databaseTable").attr('value');

      $(document).on('click', '.row_data', function(event)
      {
    	  event.preventDefault();

        $('.row_data').attr('clicked', false);
    	  if($(this).attr('edit_type') == 'button')
    	  {
    		  return false;
    	  }

        var tbl_row = $(this).closest('tr');

        $('.btn-add').css({"visibility": "hidden"});
        $('.btn-save').css({"visibility": "hidden"});
        $('.btn-delete').css({"visibility": "hidden"});
        $('.btn-cancel').css({"visibility": "hidden"});

        tbl_row
          .find('.btn-save')
          .css({"visibility": "visible"});
	      tbl_row
          .find('.btn-cancel')
          .css({"visibility": "visible"});
        tbl_row
          .find('.btn-delete'
          ).css({"visibility": "visible"});
        tbl_row
          .find('.row_data')
          .attr("clicked", false);

        $(this).attr('original_entry', $(this).html());
        $(this).attr('clicked', true);
        
        // console.log($(this).attr('clicked'));
        // console.log($(this).attr('selected').val());

    	  // Make div editable
    	  $(this)
          .closest('div')
          .attr('contenteditable', 'true');
    	  
        // Add background css
    	  $(this)
          .addClass('bg-warning')
          .css('padding','5px');

    	  $(this).focus();
        $(this).attr('edit_type', 'button');
      });

      $(document).on('click', '.btn-cancel', function(event)
    	{
    		event.preventDefault();
    		var tbl_row = $(this).closest('tr');
    	  
        // var row_id = tbl_row.attr('row_id');
    		
        // Hide save and cancel buttons
    		tbl_row
          .find('.btn-save')
          .css({"visibility": "hidden"});
    		tbl_row
          .find('.btn-cancel')
          .css({"visibility": "hidden"});
        tbl_row
          .find('.btn-delete')
          .css({"visibility": "hidden"});
        tbl_row
          .find('.btn-add')
          .css({"visibility": "hidden"});

    		// Make the whole row editable
    		tbl_row.find('.row_data')
    		  .attr('edit_type', 'click')
    		  .removeClass('bg-warning')
    		  .css('padding','')

    		tbl_row
          .find('.row_data')
          .each(function(index, val)
    		  {
    			  $(this).html( $(this).attr('original_entry') );
    		  });

        tbl_row.find('.input').val("");
    	});

      $(document).on('click', '.btn-delete', function(event)
      {
        event.preventDefault();
        
        var tbl_row = $(this).closest('tr');
        var field = tbl_row.attr('value');
        var dataToRemove = $(".row_data[clicked=true]").html().trim();
                
        // Hide save and cancel buttons
        tbl_row
          .find('.btn-save')
          .css({"visibility": "hidden"});
        tbl_row
          .find('.btn-cancel')
          .css({"visibility": "hidden"});
        tbl_row
          .find('.btn-add')
          .css({"visibility": "hidden"});
        tbl_row
          .find('.btn-delete')
          .css({"visibility": "hidden"});

        if (field == "altName")
        {
          field = "properties.name";
        }
        if (field =="altCapital")
        {
          field= "properties.capital";
        }

        // Make the whole row editable
        tbl_row
          .find('.row_data')
          .attr('edit_type', 'click')
          .removeClass('bg-warning')
          .css('padding','');

        $.ajax({
          url: '/deleteData',
          type: 'POST',
          contentType: 'application/json',
          data: JSON.stringify({
            id: id,
            field: field,
            value: dataToRemove
          }),
          dataType: 'json',
          success: function(data)
          {
            if (data.nModified > 0) 
            {
              location.reload();
            }
            else 
            {
              alert("Failed to Remove");
            }
          }
        });
      });

      // Make cancel and add button appear
      $(document).on('click', '.input', function(event)
      {
        $('.btn-add').css({"visibility": "hidden"});
        $('.btn-save').css({"visibility": "hidden"});
        $('.btn-delete').css({"visibility": "hidden"});
        $('.btn-cancel').css({"visibility": "hidden"});
      	
        event.preventDefault();
        
        var tbl_row = $(this).closest('tr');
        
        // Hide save and cancel buttons
        tbl_row.find('.btn-add').css({"visibility": "visible"});
        tbl_row.find('.btn-cancel').css({"visibility": "visible"});
        $(this).attr('edit_type', 'button');
      });

      // Add the data that was added
      $(document).on('click', '.btn-add', function(event)
      {
        console.log("add")
        
        event.preventDefault();
      
        var tbl_row = $(this).closest('tr');
        var field = tbl_row.attr('value');
        var dataToAdd = tbl_row.find(".input").val();
        
        // var id = $("#databaseTable").attr('value');
        
        if (field == "altName")
        {
          field = "properties.name"
        }
        
        if (field == "altCapital")
        {
          field= "properties.capital"
        }

        $.ajax({
          url: '/addData',
          type: 'POST',
          contentType: 'application/json',
          data: JSON.stringify({
            id: id,
            field: field,
            value: dataToAdd
          }),
          dataType: 'json',
          success: function(data)
          {
            if (data.nModified == 0)
            {
              alert("Spelling already exists in the database");
            }

            else if (data.nModified == "Input needed")
            {
              alert(data.nModified);
            }
            
            location.reload();
            
            // Hide save and cancel buttons
            tbl_row
              .find('.btn-save')
              .css({"visibility": "hidden"});
            tbl_row
              .find('.btn-cancel')
              .css({"visibility": "hidden"});
          }
        });
      });

      // Send Update Request
      $(document).on('click', '.btn-save', function(event)
      {
        event.preventDefault();
        
        console.log("save")
        
        var tbl_row = $(this).closest('tr');
        $(this).attr('edit_type', 'click');
        
        // Field to update in a database
        var field = tbl_row.attr('value');

        // Formatting the data in an array form without empty strings.
        var newData = tbl_row.find('.row_data').text().trim().split('\n');
        newData = newData.map(s =>s.trim());
        newData = newData.filter(Boolean);
        
        console.log("new", newData);
        
        // Send field: new array
        console.log(tbl_row.find('.row_data').text());
        console.log(field);

        // Can be capital or name depending on what field to update
        var name;
        if (field == "altCapital")
        {
          name = $("#capital").html()
        }
        else if (field == "altName")
        {
          name = $('#name').html();
        }
        else if(field == "properties.name")
        {
          name = $('#name').html();
          var otherNames = $("#altName").find('.row_data').text().trim().split('\n');
          if (otherNames != undefined)
          {
            otherNames = otherNames.map(s=>s.trim()).filter(Boolean)
            newData = newData.concat(otherNames);
            console.log(newData);
          }
        }
        else if(field == "properties.capital")
        {
          name = $("#capital").html();
          var otherCaps = $("#altCapital").find('.row_data').text().trim().split('\n');
          if (otherCaps != undefined)
          {
            otherCaps = otherCaps.map(s=>s.trim()).filter(Boolean);
            newData = newData.concat(otherCaps);
            console.log(newData);
          }
        }

        console.log("name ---- " + name);

        $.ajax({
          url: '/update',
          type: 'PUT',

          contentType: 'application/json',
          data: JSON.stringify({
            id: id,
            name: name,
            field: field,
            value: newData
          }),
          dataType: 'json',
          success: function(data)
          {
            if (data.n > 0)
            {
              console.log(data);
              console.log("Success update request");
            }
            else
            {
              location.reload()
              alert("Failed to save");
            }
          }
        });

        tbl_row
          .find('.btn-save')
          .css({"visibility": "hidden"});
        tbl_row
          .find('.btn-cancel')
          .css({"visibility": "hidden"});
        tbl_row
          .find('.btn-delete')
          .css({"visibility": "hidden"});
      });

      $(document).on('focusout', '.row_data', function(event)
      {

